(ns swipe.settings)

; Canvas width
(def width 800)

; Key spacing
(def step-x (/ width 10))
(def step-y (/ width 10))

; Key font
(def font "italic 40pt Lucidatypewriter, monospace")

; Key text offset
(def text-x 18)
(def text-y 55)

; Keypad offset
(def offset-x 50)
(def offset-y 25)

; Key padding
(def padding-x 5)
(def padding-y 5)

; Id of the canvas element to use
(def canvas-id "swipe-canvas")
