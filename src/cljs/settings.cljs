(ns swipe.settings) 

; Canvas width
(def width 800)

; Key spacing
(def step-x (/ width 10))
(def step-y (/ width 10))

; Key font
(def font "italic 40pt Calibri")

; Key text offset
(def text-x 20)
(def text-y 50)

; Key padding
(def padding-x 5)
(def padding-y 5)

; Id of the canvas element to use
(def canvas-id "swipe-canvas")
